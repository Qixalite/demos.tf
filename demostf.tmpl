server {
	listen 80;
	server_name ${HOST};
	root /usr/share/nginx/html;

	client_max_body_size 150m;

	try_files $uri /index.html$is_args$args =404;

	include upload.conf;

	location = /service-worker.js {
		expires 1m;
		access_log off;
	}
	location ~* ^.+\.(jpg|jpeg|gif|bmp|ico|png|css|js|swf)$ {
		expires 30d;
		access_log off;
	}
}
